<nav class="navbar navbar-default">
  <div id="nav" class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><button class="btn btn-default" type="button">Home</button></a>
      <a class="navbar-brand" href="/saved"><button class="btn btn-default" type="button">Saved</button></a>
      <a class="navbar-brand" href="/scrape"><button class="btn btn-default" type="button">Scrape!</button></a>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="text-center row">

    <div class="col-sm-12">

      <div class="jumbotron">
        <h1>Mongo Scraper</h1>
        <h5>All the News That's Fit to Scrape</h5>
      </div>

    </div>

  </div>
</div>

<h2 class="text-center">Scraped Articles</h2>

{{#each articles}}
{{#unless this.saved}}

<div class="container">
  <div class="row">

    <div class="col-sm-12">
      
      <div class="container-fluid header">
      
        <div class="col-sm-11">
          <h4><a href={{this.link}} target="_blank">{{this.title}}</a></h4>
        </div>

        <div class="col-sm-1">
          <form action="/{{this._id}}?_method=PUT" method="POST">
            <input name="saved" value=true type="hidden">

            <button class="btn btn-default" type="submit">Save!</button>

          </form>
        </div>

      </div>

      <div class="container-fluid">
        <p>{{this.summary}}</p>
      </div>
  
    </div>
  </div>
</div>

{{/unless}}
{{/each}}

<!--Allows me to use JQuery -->
<script src="http://code.jquery.com/jquery.js"></script>
<script src="app.js"></script>